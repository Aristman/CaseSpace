<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CaseSpace" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500__purple_200</item>
        <item name="colorPrimarySurface">@color/purple50_500__purple50_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white__black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/lightBlue__darkBlue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.CaseSpace.Emerald">
        <item name="colorPrimary">@color/emerald_200__green_200</item>
        <item name="colorPrimarySurface">@color/emerald50_200__green50_200</item>
        <item name="colorPrimaryVariant">@color/emerald_700__green_700</item>
        <item name="colorOnPrimary">@color/white__black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lime_200</item>
        <item name="colorSecondaryVariant">@color/lime_900__lime_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="MarsTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/red_500__red_dark_500</item>
        <item name="colorPrimarySurface">@color/red50_500__red_dark50_500</item>
        <item name="colorPrimaryVariant">@color/red_900__red_dark_900</item>
        <item name="colorOnPrimary">@color/white__black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_200</item>
        <item name="colorSecondaryVariant">@color/orange_900__orange_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
</resources>