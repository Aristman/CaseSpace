<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/mars_anim_start">
        <Constraint
            android:id="@+id/mars_big_image"
            android:scaleY="1"
            android:scaleX="1"
            app:layout_constraintWidth="match_parent"
            app:layout_constraintHeight="match_parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/mars_anim_end">
        <Constraint
            android:id="@id/mars_big_image"
            android:scaleX="5"
            android:scaleY="5"
            app:layout_constraintWidth="match_parent"
            app:layout_constraintHeight="match_parent" />
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/mars_anim_end"
        app:constraintSetStart="@+id/mars_anim_start" />
</MotionScene>
