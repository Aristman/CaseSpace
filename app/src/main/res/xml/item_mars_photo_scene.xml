<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/mars_item_anim_start">
        <Constraint
            android:id="@+id/mars_photo_card"
            android:layout_width="0dp" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/mars_item_anim_end">
        <Constraint
            android:id="@id/mars_photo_card"
            android:layout_width="wrap_content" />
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/mars_item_anim_end"
        app:constraintSetStart="@id/mars_item_anim_start" />
</MotionScene>
